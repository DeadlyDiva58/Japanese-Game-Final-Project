.quick-create-grid
{
	align-self: center;
	width: 100%;
	height: 100%;
	background-color: rgba(0,0,0,0);
}

.quick-create-grid-button-box
{
	position: absolute;
    background-color: rgba(0,0,0,0.8);
    padding-left: 8px;
    padding-right: 8px;
    padding-top: 8px;
    padding-bottom: 8px;
}

.quick-create-grid-button-convo-box
{
    top: 60px;
    left: 60px;
}

.quick-create-grid-button-logic-box
{
    top: 60px;
    right: 60px;
}

.quick-create-grid-button-flow-box
{
    bottom: 60px;
    left: 60px;
}

.quick-create-grid-button-variable-box
{
    bottom: 60px;
    right: 60px;
}

