.quick-create-wheel
{
	background-image: resource('images/components/quick_wheel1');
	background-color: rgba(1,0,0,0);
	-unity-background-image-tint-color: rgba(.42,.42,.42,.8);
	position: absolute;
	top: 2%;
	bottom: 2%;
	align-self: center;
}
 
.quick-create-wheel-button
{
	background-image: resource('images/buttons/quick_button');
	-unity-slice-scale: 0.1px;
	position: absolute;
	align-items: center;
	width: auto;
	opacity: 0.7;
}

